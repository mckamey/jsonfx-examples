<browsers>
	<!-- W3C Markup Validation Service -->
	<browser id="W3C_Validator" parentID="default">
		<identification>
			<userAgent match="^W3C_Validator" />
		</identification>

		<capture>
			<userAgent match="^W3C_Validator/(?'version'(?'major'\d+)\.(?'minor'\d+)(\.\d+)*)" />
		</capture>

		<capabilities>
			<capability name="browser" value="W3C Validator" />
			<capability name="version" value="${version}" />
			<capability name="ecmaScriptVersion" value="1.4" />
			<capability name="javaScript" value="true" />
			<capability name="supportsCss" value="true" />
			<capability name="tables" value="true" />
			<capability name="w3cDomVersion" value="1.0" />
			<capability name="htmlTextWriter" value="System.Web.UI.XhtmlTextWriter" />
			<capability name="tagWriter" value="System.Web.UI.XhtmlTextWriter" />
			<capability name="preferredRenderingMime" value="application/xhtml+xml" />
			<capability name="preferredRequestEncoding" value="UTF-8" />
			<capability name="preferredResponseEncoding" value="UTF-8" />
		</capabilities>
	</browser>

	<!-- Gecko -->
	<browser refID="Gecko">
		<capture>
			<userAgent match="\brv\:(?'rv'\d+(\.\d+)+)" />
			<header match="^(?'accept'.*)$" name="Accept" />
		</capture>
		<capabilities>
			<capability name="accept" value="${accept}" />
			<capability name="renderengine" value="Gecko/${rv}" />
		</capabilities>
	</browser>

	<!-- Safari -->
	<browser refID="Safari">
		<capture>
			<userAgent match="\bSafari/(?'version'(?'major'\d+)(\.(?'minor'\d+))?(\.\d+)*)" />
			<userAgent match="\bAppleWebKit/(?'webkit'\d+(\.\d+)+)" />
			<header match="^(?'accept'.*)$" name="Accept" />
		</capture>

		<capabilities>
			<capability name="accept" value="${accept}" />
			<capability name="browser" value="Safari" />
            <capability name="type" value="Safari${major}" />
			<capability name="version" value="${version}" />
			<capability name="majorversion" value="${major}" />
			<capability name="minorversion" value="${minor}" />
			<capability name="renderengine" value="AppleWebKit/${webkit}" />
			<capability name="applewebkit" value="AppleWebKit/${webkit}" />
		</capabilities>
	</browser>

	<!-- Safari iPhone -->
	<browser id="iPhoneSafari" parentID="Safari">
		<identification>
			<userAgent match="\bMobile/(?'iphone'\B+)" />
		</identification>
		<capabilities>
			<capability name="iphone" value="${iphone}" />
		</capabilities>
	</browser>

	<!-- iCab -->
	<browser id="iCab" parentID="Default">
		<identification>
			<userAgent match="\biCab[/\s]*(?'version'(?'major'\d+)(\.(?'minor'\d+))?)" />
		</identification>
		<capture>
			<header match="^(?'accept'.*)$" name="Accept" />
		</capture>

		<capabilities>
			<capability name="accept" value="${accept}" />
			<capability name="browser" value="iCab" />
            <capability name="type" value="iCab${major}" />
			<capability name="version" value="${version}" />
			<capability name="majorversion" value="${major}" />
			<capability name="minorversion" value="${minor}" />
		</capabilities>
	</browser>

	<!-- iCab as Mozilla -->
	<browser id="iCabMozilla" parentID="Mozilla">
		<identification>
			<userAgent match="\biCab[/\s]*(?'version'(?'major'\d+)(\.(?'minor'\d+))?)" />
		</identification>

		<capture>
			<header match="^(?'accept'.*)$" name="Accept" />
		</capture>

		<capabilities>
			<capability name="accept" value="${accept}" />
			<capability name="browser" value="iCab" />
            <capability name="type" value="iCab${major}" />
			<capability name="version" value="${version}" />
			<capability name="majorversion" value="${major}" />
			<capability name="minorversion" value="${minor}" />
		</capabilities>
	</browser>

</browsers>
