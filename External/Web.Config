<?xml version="1.0"?>
<configuration>
	<system.web>
		<pages>
			<controls>
				<add tagPrefix="JsonFx" namespace="JsonFx.UI" assembly="JsonFx"/>
			</controls>
		</pages>
<!-- set debug="false" to get script compaction -->
		<compilation debug="false">
			<buildProviders>
				<add extension=".json" type="JsonFx.Compilation.JsonServiceBuildProvider, JsonFx"/>
				<remove extension=".js"/>
				<add extension=".js" type="JsonFx.Compilation.ScriptCompactorBuildProvider, JsonFx"/>
<!-- CSS compaction isn't ready yet -->
<!--
				<remove extension=".css" />
				<add extension=".css" type="JsonFx.Compilation.CssCompactorBuildProvider, JsonFx"/>
-->
			</buildProviders>
		</compilation>
		<httpHandlers>
			<add path="*.js" verb="*" type="JsonFx.Handlers.ClientScriptHandler, JsonFx" validate="true"/>
			<add path="*.json" verb="*" type="JsonFx.Handlers.JsonServiceHandlerFactory, JsonFx" validate="true"/>
			<add path="*.jsonfx" verb="*" type="JsonFx.Handlers.ClientScriptHandler, JsonFx" validate="true"/>
		</httpHandlers>
		<httpModules>
			<add name="BrowserModule" type="JsonFx.Handlers.BrowserModule, JsonFx" />
		</httpModules>

		<xhtmlConformance mode="Strict"/>
	</system.web>
</configuration>
