<%@ Control Name="UIT.Confirm" Language="JavaScript" %>

<script type="text/javascript">

	this.show = function(
		/*string*/ message,
		/*function*/ okAction,
		/*function*/ cancelAction,
		/*string*/ okLabel,
		/*string*/ cancelLabel) {

		var data = {
			message: message,
			okAction: okAction,
			cancelAction: cancelAction,
			okLabel: okLabel,
			cancelLabel: cancelLabel
		};

		UIT.Dialog.show(UIT.Confirm, data, -1, -1, true, true);
	};

	this.closureAction = function(/*function*/ action) {
		return function() {
			UIT.Dialog.hide(action);

			return false;
		};
	};

</script>

<div class="confirm">

	<h3 jbst:visible="<%= !!this.data.title %>"><%= this.data.title %></h3>

	<p jbst:visible="<%= !!this.data.message %>"><%= this.data.message %></p>

	<fieldset>
		<a href="#cancel"
			class="button button-reverse"
			onclick="<%= this.closureAction(this.data.cancelAction) %>"><%= this.data.cancelLabel||"Cancel" %></a>
		<a href="#ok"
			class="button button-reverse"
			onclick="<%= this.closureAction(this.data.okAction) %>"><%= this.data.okLabel||"OK" %></a>
	</fieldset>

</div>
