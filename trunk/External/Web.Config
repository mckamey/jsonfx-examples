<?xml version="1.0"?>
<configuration>
	<appSettings>
		<add key="UrchinID" value="" />
	</appSettings>
	<system.web>
		<pages>
			<controls>
				<add tagPrefix="JsonFx" namespace="JsonFx.UI" assembly="JsonFx"/>
			</controls>
		</pages>
		<customErrors mode="Off" />
<!-- set debug="false" to get script compaction -->
		<compilation debug="false">
			<buildProviders>
				<add extension=".json" type="JsonFx.Compilation.JsonServiceBuildProvider, JsonFx"/>
				<remove extension=".js"/>
				<add extension=".js" type="JsonFx.Compilation.CompactorBuildProvider, JsonFx"/>
				<remove extension=".css" />
				<add extension=".css" type="JsonFx.Compilation.CompactorBuildProvider, JsonFx"/>
			</buildProviders>
		</compilation>
		<httpHandlers>
			<add path="*.css" verb="*" type="JsonFx.Handlers.CssHandler, JsonFx" validate="true"/>
			<add path="*.js" verb="*" type="JsonFx.Handlers.ClientScriptHandler, JsonFx" validate="true"/>
			<add path="*.json" verb="*" type="JsonFx.Handlers.JsonServiceHandlerFactory, JsonFx" validate="true"/>
			<add path="*.jsonfx" verb="*" type="JsonFx.Handlers.JsonFxScriptHandler, JsonFx" validate="true"/>
		</httpHandlers>
		<httpModules>
			<add name="BrowserModule" type="JsonFx.Handlers.BrowserModule, JsonFx" />
		</httpModules>

		<xhtmlConformance mode="Strict"/>
	</system.web>
	<system.codedom>
		<compilers>
			<compiler language="css;stylesheet" extension=".css"  type="JsonFx.Compilation.CssCompactorCodeProvider, JsonFx" />
			<compiler language="js;javascript" extension=".js"  type="JsonFx.Compilation.ScriptCompactorCodeProvider, JsonFx" />
		</compilers>
	</system.codedom>
</configuration>
